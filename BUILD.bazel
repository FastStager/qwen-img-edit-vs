load("@rules_oci//oci:defs.bzl", "oci_image", "oci_push")
load("@rules_python//python:defs.bzl", "py_binary")
load("@rules_pkg//:pkg.bzl", "pkg_tar")

py_binary(
    name = "compile_model_bin",
    srcs = ["compile_model.py"],
    main = "compile_model.py",
    deps = [
        "@pip//torch",
        "@pip//torchvision",
        "@pip//diffusers",
        "@pip//transformers",
        "@pip//huggingface-hub",
        "@pip//safetensors",
        "@pip//accelerate",
    ],
    python_version = "PY3",
)

genrule(
    name = "compiled_model_gen",
    tools = [":compile_model_bin"],
    cmd = "$(location :compile_model_bin)",
    outs = ["compiled_pipe.pt"],
    tags = ["requires-gpu"],
)

pkg_tar(
    name = "app_layer",
    srcs = glob([
        "handler.py",
        "optimization.py",
        "app.py",
        "README.md",
    ]) + glob(["qwenimage/**/*.py"]),
    package_dir = "/app",
)

pkg_tar(
    name = "model_layer",
    srcs = [":compiled_model_gen"],
    package_dir = "/app",
)

oci_image(
    name = "qwen_image_server",
    base = "@runpod_base_image//image",
    entrypoint = [
        "/usr/bin/python3.11",
        "/app/handler.py",
    ],
    layers = [
        ":app_layer",
        ":model_layer",
        "@pip//:all_whl_layer",
    ],
)

oci_push(
    name = "push_image",
    image = ":qwen_image_server",
    repository = "index.docker.io/$(DOCKER_USERNAME)/qwen-image-server-bazel",
    tags = ["latest"],
)